<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_char_rectangle"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/background_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/char_detail_box_selected"
        android:visibility="gone"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/check_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_orange"
        android:layout_marginTop="11dp"
        android:layout_marginStart="126dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/check_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_gray"
        android:layout_marginTop="11dp"
        android:layout_marginStart="126dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>
</FrameLayout>