<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F1EC"
    tools:context=".Memory.FinFragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24.75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79.23dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24.75dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_circle"
            />

        <ImageView
            android:id="@+id/iv_baby_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baby_tiger"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향을 알려줘"
        android:fontFamily="@font/pretendard500"
        android:textSize="20sp"
        android:textColor="#DCD9D5"
        android:layout_marginTop="430dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노래가 만들어졌어!"
        android:fontFamily="@font/pretendard500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="471dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마음에 들어?"
        android:fontFamily="@font/pretendard500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_fin_yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="98dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fin_rectengle"/>
        <ImageView
            android:id="@+id/background_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fin_rectengle_selected"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/genre_option"
            android:text="응"
            android:fontFamily="@font/pretendard500"
            android:textSize="20sp"
            android:textColor="#787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_fin_no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="39.66dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fin_rectengle"/>
        <ImageView
            android:id="@+id/background_selected2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fin_rectengle_selected"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/genre_option2"
            android:text="다시 선택할래"
            android:fontFamily="@font/pretendard500"
            android:textSize="20sp"
            android:textColor="#787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>