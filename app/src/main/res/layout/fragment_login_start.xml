<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EB5F2A">


            <ImageView
                android:id="@+id/login_agarang_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_agarang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="210dp"/>

            <ImageView
                android:id="@+id/login_agarang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_agarang_text_img"
                app:layout_constraintTop_toBottomOf="@id/login_agarang_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="57dp"/>

            <View
                android:id="@+id/temp_view"
                android:layout_width="1dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/login_agarang_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="102dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ic_login_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_kakao"
                app:layout_constraintTop_toBottomOf="@id/login_agarang_text"
                app:layout_constraintEnd_toStartOf="@id/temp_view"
                android:layout_marginEnd="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="102dp"/>
            <ImageView
                android:id="@+id/ic_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_login_google"
                app:layout_constraintTop_toBottomOf="@id/login_agarang_text"
                app:layout_constraintStart_toEndOf="@id/temp_view"
                android:layout_marginStart="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="102dp"/>



            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 연동 로그인"
                app:layout_constraintTop_toBottomOf="@id/ic_login_kakao"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>