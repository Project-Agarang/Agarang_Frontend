<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/tv_onboarding_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가족이 함께 만들어가는"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/tv_onboarding_ment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="특별한 태교,"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#EB5F2A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_ment"/>
    <TextView
        android:id="@+id/tv_onboarding_ment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'아가랑'입니다."
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_ment_2"/>

    <ImageView
        android:id="@+id/iv_onboarding_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_ment_3"
        android:layout_marginTop="72dp"/>
    <ImageView
        android:id="@+id/iv_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_onboarding_image"
        android:layout_marginTop="75dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>