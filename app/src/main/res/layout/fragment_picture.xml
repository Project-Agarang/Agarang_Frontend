<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Memory.PictureFragment"
    android:background="#F4F1EC">

    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24.75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79.23dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24.75dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_circle"
            />

        <ImageView
            android:id="@+id/iv_baby_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baby_tiger"
            android:layout_gravity="center"/>

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 어떤 추억을 가지고 왔어?"
        android:textSize="20sp"
        android:textColor="#797979"
        app:layout_constraintBottom_toTopOf="@id/iv_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gallery_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="627.34dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>