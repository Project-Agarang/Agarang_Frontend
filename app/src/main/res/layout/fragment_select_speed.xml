<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F1EC"
    tools:context=".Memory.SelectSpeedFragment">

    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24.75dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79.23dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24.75dp">

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_circle"
            />

        <ImageView
            android:id="@+id/iv_baby_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baby_tiger"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_pre_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어울리는 단어를 골라줘"
        android:fontFamily="@font/pretendard500"
        android:textSize="20sp"
        android:textColor="#DCD9D5"
        app:layout_constraintTop_toBottomOf="@id/fl_icon"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노래속도를 골라줘!"
        android:fontFamily="@font/pretendard500"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_pre_option"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_speed_fast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle"/>
        <ImageView
            android:id="@+id/background_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle_selected"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/genre_option"
            android:text="빠르게"
            android:fontFamily="@font/pretendard500"
            android:textSize="17sp"
            android:textColor="#787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_speed_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle"/>
        <ImageView
            android:id="@+id/background_selected2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle_selected"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/genre_option2"
            android:text="중간"
            android:fontFamily="@font/pretendard500"
            android:textSize="17sp"
            android:textColor="#787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_speed_slow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle"/>
        <ImageView
            android:id="@+id/background_selected3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_genre_rectangle_selected"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/genre_option3"
            android:text="느리게"
            android:fontFamily="@font/pretendard500"
            android:textSize="17sp"
            android:textColor="#787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>